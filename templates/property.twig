{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="d-flex justify-content-center p-2">Nearby Properties</h1>

    <div class="container">
        <table class="table table-hover table-active">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">{{ "general.title"|trans }}</th>
                <th scope="col">{{ "general.bedrooms"|trans }}</th>
                <th scope="col">{{ "general.lat"|trans }}</th>
                <th scope="col">{{ "general.long"|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for house in properties %}
                <tr>
                    <td>{{ house.id }}</td>
                    <td><a href="{{ path('property_details', { 'id': house.id }) }}"
                           class="text-dark">{{ house.title }}</a></td>
                    <td>{{ house.bedrooms }}</td>
                    <td>{{ house.latitude }}</td>
                    <td>{{ house.longitude }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}