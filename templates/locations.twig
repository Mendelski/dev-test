{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="d-flex justify-content-center">List of Locations</h1>
    <div class="container">
        <table class="table table-hover table-active">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Location</th>
                <th scope="col">Latitude</th>
                <th scope="col">Longitude</th>
            </tr>
            </thead>
            <tbody>
            {% for local in locations %}
                <tr>
                    <td>{{ local.id }}</td>
                    <td><a href="{{ path('location', { 'slug': local.slug }) }}" class="text-dark">{{ local.name }}</a>
                    </td>
                    <td>{{ local.latitude }}</td>
                    <td>{{ local.longitude }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
